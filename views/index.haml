!!!
%html
  %head
    %link{ :href => '/css/app.css', :media => 'all', :rel => 'stylesheet', :type => 'text/css' } 
    %script{ :src => '/lib/json2.js', :type => 'text/javascript' }
    %script{ :src => '/lib/jquery-1.4.2.js', :type => 'text/javascript' }
    %script{ :src => '/lib/underscore-1.1.3.js', :type => 'text/javascript' }
    %script{ :src => '/lib/backbone.js', :type => 'text/javascript' }
    %script{ :src => '/lib/models/resource.js', :type => 'text/javascript' }
    %script{ :src => '/lib/collections/resourceList.js', :type => 'text/javascript' }
    %script{ :src => '/lib/views/appView.js', :type => 'text/javascript' }
    %script{ :src => '/lib/views/resourceView.js', :type => 'text/javascript' }
    %script{ :src => '/lib/controllers/appController.js', :type => 'text/javascript' }
    %script{ :src => '/lib/app.js', :type => 'text/javascript' }
    %script#resourceTemplate{ :type => 'text/template' }
      :plain
        <li class='resourceLink'><a href='#<%= url %>'><%= name %></a><a class='delete' href='#<%= url + '/delete' %>'></a></li>
    %script#resourceDetailTemplate{ :type => 'text/template' }
      :plain
        <div id='docTitle' class='title' tabindex='1' contenteditable='true'><%= name %></div>
        <div id='docContent' tabindex='2' contenteditable='true'><%= data %></div>
  %body
    %div#container
      %div#app.leftSide
        %div#resourceListTitle.title Documents
        %ul#resourceList
        %div
          %a#newResource{ :href => '#resources/new' } New...
      %div#doc.rightSide
      %div#footer{ :style => 'clear: both; height: 10px;' }
